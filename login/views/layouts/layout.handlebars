<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <div class="row">
                    <a class="navbar-brand" href="#page-top">BookFace!
                    {{#if user}}
                        <br><span class="text-white nav-text">Hi {{user.username}}, welcome back!</span>
                    {{/if}} 
                    </a>
                </div>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>                    
                    {{#if user}}
                        <li class="page-scroll">
                            <a href="/">Dashboard</a>
                        </li>
                        <li class="page-scroll">
                            <a href="/users/logout">Log out</a>
                        </li>
                    {{else}}
                        
                        <li class="page-scroll">
                            <a href="/users/register">Register</a>
                        </li>
                        <li class="page-scroll">
                            <a href="/users/login">Login</a>
                        </li>
                    {{/if}} 
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Header -->
    <header>
        <div class="container-inner">
            <div class="row">
                <div class="col-lg-12">
                    

                	{{#if success_msg}}
                		<div class="alert alert-success">{{success_msg}}</div>	                        		
                	{{/if}}

                	{{#if error_msg}}
                		<div class="alert alert-danger">{{error_msg}}</div>
                	{{/if}}

                	{{#if error}}
                		<div class="alert alert-danger">{{error}}</div>
                	{{/if}}

                	<i><span>{{{body}}}</span></i>
                        
        </div>
    </header>
    
    <!-- Footer -->
    <footer class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                        <h3>Location</h3>
                        <p>123, London Way
                            <br>London Wall, EC1V 9PY</p>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Find us on the web!</h3>
                        <ul class="list-inline">
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
                            </li>
                            <li>
                                <a href="#" class="btn-social btn-outline"><i class="fa fa-fw fa-dribbble"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>About BookFace!</h3>
                        <p>Lorem ipsum dolor sit amet... consectetur adipiscing.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <i>A different kind of social media platform ...</i> &copy; BookFace! 2017
                    </div>
                </div>
            </div>
        </div>
    </footer>

